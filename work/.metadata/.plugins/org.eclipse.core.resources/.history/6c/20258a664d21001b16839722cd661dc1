//	PARA TESTE LOCAL
#include <stdio.h>
#include <stdlib.h>

//	TIPOS DA ALTERA PARA FPGA
#include "system.h"
#include "altera_avalon_pio_regs.h"
#include "alt_types.h"

//biblioteca para usar delay
#include <unistd.h>

#define PORT(base) IORD_ALTERA_AVALON_PIO_DATA(base)
#define LAT(base, data) IOWR_ALTERA_AVALON_PIO_DATA(base, data)

void setup(void);
void loop(void);
void f_timers(void);
void f_timer1(void);
void f_timer2(void);
void f_timer3(void);

alt_u16 max_timer1, max_timer2, max_timer3;
//alt_u8 sw, key, ledr, ledg;
const alt_u8 DIGIT[] = {0x06, 0x5b, 0x4f, 0x66, 0x7d, 0x07, 0x7f, 0x6f};

void setup(void){
	max_timer1 = 1000;
	max_timer2 = 600;
	max_timer3 = 0;
}

void loop(void){
	f_timers();
	usleep(1000);
}

int main(void)
{
  setup();

  while (1) loop();

  return 0;
}

void f_timers(void){
	static alt_u16 c_timer1 = 0, c_timer2 = 0, c_timer3 = 0;

	//timer1
	if(c_timer1<=max_timer1){
		c_timer1++;
	} else{
		c_timer1 = 0;
		f_timer1();
	}
	//timer2
	if(c_timer2<=max_timer2){
		c_timer2++;
	} else{
		c_timer2 = 0;
		f_timer2();
	}
	//timer3
	if(c_timer3<=max_timer3){
		c_timer3++;
	} else{
		c_timer3 = 0;
		f_timer3();
	}
}

alt_u8 state_machine(alt_u8 state) {
    switch (state) {
    	case 2:
    		return 3;
    	break;
        case 3:
            return 5;
        break;
        case 5:
            return 7;
        break;
        case 7:
            return 11;
        break;
        case 11:
            return 13;
        break;
        case 13:
            return 17;
        break;
		case 17:
            return 19;
        break;
		case 19:
			return 23;
		break;
        case 23:
            return 29;
        break;
        case 29:
            return 2;
        break;
        default:
            return 2;
        break;
    }
}

void f_timer1(void){
	static alt_u8 state = 0;
	alt_u8 dd, du;

	state = state_machine(state);

	dd = state/10;
	du = state - 10*dd;

	printf("State: %u StateMachine: %u Dezena: %u Unidade: %u Dezena_7S: %u Unidade_7s: %u\n",
			state,state,dd, du, DIGIT[dd], DIGIT[du]);

	LAT(HEX5_RC_BASE, DIGIT[dd]);
	LAT(HEX4_RC_BASE, DIGIT[du]);
}

void f_timer2(void) {
	static ledr = 0;

}

void f_timer3(void) {

}





